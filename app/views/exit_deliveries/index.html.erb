<div class="mx-3">
  <div class="exit-delivery">
    <p id="notice"><%= notice %></p>
    <h1 class="text-center">Redirect URLS</h1>
    <div class="container pb-3">
      <%= render "exit_deliveries/filters" %>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Url</th>
          <th>Today Count</th>
          <th>Total Count</th>
          <th>Default</th>
          <th>Percentage</th>
          <th>Status</th>
          <th>Priority</th>
          <th>Cap</th>
          <th>Source</th>
          <th>functional</th>
          <th>For Mobile</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @exit_deliveries.each do |exit_delivery| %>
          <tr>
            <td><%= exit_delivery.name %></td>
            <td><%= exit_delivery.url %></td>
            <td><%= exit_delivery.count %></td>
            <td><%= exit_delivery.total_count %></td>
            <td><%= exit_delivery.is_default %></td>
            <td><%= exit_delivery.percentage %></td>
            <td><%= exit_delivery.status %></td>
            <td><%= exit_delivery.priority %></td>
            <td><%= exit_delivery.cap %></td>
            <td><%= exit_delivery.source %></td>
            <td><%= exit_delivery.functional %></td>
            <td><%= exit_delivery.is_mobile %></td>
            <td><%= link_to 'Show', exit_delivery, :class => "btn btn-success btn-xs text-white btns-text" %></td>
            <td><%= link_to 'Edit', edit_exit_delivery_path(exit_delivery),
            :class => "btn btn-primary btn-xs text-white btns-text" %></td>
            <td><%= link_to 'Destroy', exit_delivery,:class => "btn btn-danger btn-xs text-white btns-text", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="text-center">
      <%= link_to 'New Exit Delivery', new_exit_delivery_path, :class => "btn btn-info btn-xs text-white" %>
    </div>
  </div>
</div>
